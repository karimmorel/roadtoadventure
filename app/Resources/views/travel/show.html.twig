{% extends 'base.html.twig' %}

{% block body %}
    <h1>Travel</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ travel.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ travel.name }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ travel.city.name }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ travel.link }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ travel.description }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ travel.position }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if travel.createdAt %}{{ travel.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if travel.updatedAt %}{{ travel.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('travel_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('travel_edit', { 'id': travel.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
