{% extends 'base.html.twig' %}

{% block body %}
    <h1>Stuff</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stuff.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ stuff.name }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ stuff.priority }}</td>
            </tr>
            <tr>
                <th>Minprice</th>
                <td>{{ stuff.minPrice }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ stuff.price }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ stuff.link }}</td>
            </tr>
            <tr>
                <th>Informations</th>
                <td>{{ stuff.informations }}</td>
            </tr>
            <tr>
                <th>Buy</th>
                <td>{% if stuff.buy %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Worth</th>
                <td>{{ stuff.worth }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ stuff.category.name }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if stuff.createdAt %}{{ stuff.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if stuff.updatedAt %}{{ stuff.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('_edit', { 'id': stuff.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
